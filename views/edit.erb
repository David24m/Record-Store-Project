<h1>Edit an album</h1>

<form class="new" action="/recordstore/<%= @albums.id %>" method="POST">

  <label>
      <label for="artist-name-field"></label>
      <select class="drop-menu" id="artist-name-field" name="artist_id" selected="<%= @albums.artist_id %>"/>
      <% for artist in @artists do %>
        <% if artist.id == @albums.artist_id %>
          <option value=<%= artist.id %> selected><%= artist.artist_name %></option>
        <% else %>
          <option value=<%= artist.id %>><%=artist.artist_name %></option>
        <% end %>
      <% end %>
      </select>

      <label for="album-name-field">Album Name:</label>
      <input class="input-box" id="album-name-field" name="album_name" type="text" value="<%= @albums.album_name %>"/>

      <label for="album-genre-field">Album Genre:</label>
      <input class="input-box" for="album-genre-field" name="genre" type="text" value="<%= @albums.genre %>"/>

      <label for="album-stock-level">Number of Albums in Stock:</label>
      <input class="input-box" id="album-stock-level" name="stock" type="text" value="<%= @albums.stock %>"/>

      <label for="album-sale-price">Sale Price of Album:</label>
      <input class="input-box" id="album-sale-price" name="sale_price" type="text" value="<%= @albums.sale_price %>"/>

      <label for="album-buy-price">Buy Price of Album:</label>
      <input class="input-box" id="album-buy-price" name="buy_price" type="text" value="<%= @albums.buy_price %>"/>

      <input class="button" type="submit" value="EDIT">

</form>
